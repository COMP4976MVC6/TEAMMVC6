@model TeamMVC6.Models.YearTerm

@{
    ViewBag.Title = "Confirm Delete";
}

<h3>Are you sure you want to delete this?</h3>

@if (ViewBag.Retry)
{
    <p class="alert alert-danger">Error deleting. Retry?</p>
}

@if (ViewBag.Default)
{
    <p class="alert alert-danger">Cannot Delete Default Term.</p>
}

<div>
    <dl class="dl-horizontal">

        <dt>@Html.DisplayNameFor(model => model.Year)</dt>
        <dd>@Html.DisplayFor(model => model.Year)</dd>

        <dt>@Html.DisplayNameFor(model => model.Term)</dt>
        <dd>@ViewBag.season</dd>

        <dt>@Html.DisplayNameFor(model => model.IsDefault)</dt>
        <dd>@Html.DisplayFor(model => model.IsDefault)</dd>
    </dl>

    <div>
        <form asp-controller="YearTerm" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Delete" />
            </div>
        </form>

        <p><a asp-controller="YearTerm" asp-action="Index">Back to List</a></p>
    </div>
</div>