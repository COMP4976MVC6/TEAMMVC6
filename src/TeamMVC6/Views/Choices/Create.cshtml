@model TeamMVC6.Models.Choice

@{
    ViewBag.Title = "Choices - Create Page";
}

<h3>Choose your Options</h3>

<hr />

<div>
    <form asp-controller="Choice" asp-action="Create" method="post">
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="StudentId"></label>
            <input asp-for="StudentId" class="form-control" placeholder="Student Id" readonly="readonly"/>
            <span asp-validation-for="StudentId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StudentFirstName"></label>
            <input asp-for="StudentFirstName" class="form-control" placeholder="First Name" />
            <span asp-validation-for="StudentFirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StudentLastName"></label>
            <input asp-for="StudentLastName" class="form-control" placeholder="Student Last Name" />
            <span asp-validation-for="StudentLastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="FirstChoiceOptionId"></label>
            <select asp-for="FirstChoiceOptionId" class="form-control">
                <option selected="selected">Choose an Option...</option>
                <option value="CS">Client Server</option>
                <option value="DP">Digital Processing</option>
                <option value="IS">Information Systems</option>
                <option value="WM">Web & Mobile</option>
                <option value="DC">Data Communications</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="SecondChoiceOptionId"></label>
            <select asp-for="SecondChoiceOptionId" class="form-control">
                <option selected="selected">Choose an Option...</option>
                <option value="CS">Client Server</option>
                <option value="DP">Digital Processing</option>
                <option value="IS">Information Systems</option>
                <option value="WM">Web & Mobile</option>
                <option value="DC">Data Communications</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="ThirdChoiceOptionId"></label>
            <select asp-for="ThirdChoiceOptionId" class="form-control">
                <option selected="selected">Choose an Option...</option>
                <option value="CS">Client Server</option>
                <option value="DP">Digital Processing</option>
                <option value="IS">Information Systems</option>
                <option value="WM">Web & Mobile</option>
                <option value="DC">Data Communications</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="FourthChoiceOptionId"></label>
            <select asp-for="FourthChoiceOptionId" class="form-control">
                <option selected="selected">Choose an Option...</option>
                <option value="CS">Client Server</option>
                <option value="DP">Digital Processing</option>
                <option value="IS">Information Systems</option>
                <option value="WM">Web & Mobile</option>
                <option value="DC">Data Communications</option>
            </select>
        </div>

        <input type="submit" class="btn btn-default" value="Create" />
    </form>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}
